{
	"include": ["src", "src/typings"],
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"lib": ["dom", "es2017"],
		"moduleResolution": "node",
		"jsx": "preserve",
		"baseUrl": "src",
		"paths": {
			"*": ["*", "src/components/*", "src/assets/*", "src/redux/*", "/src/utils/*", "/src/pages/*"]
		},
		"strict": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noEmit": true,
		"skipLibCheck": true
	}
}
