{
	"include": ["src", "src/typings"],
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"lib": ["dom", "es2017"],
		"moduleResolution": "node",
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"@*": ["src/*"]
		},
		"strict": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noEmit": true,
		"skipLibCheck": true
	}
}
