{
	"include": ["src", "src/typings"],
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"lib": ["dom", "es2017"],
		"moduleResolution": "node",
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"@assets/*": ["src/assets/*"],
			"@components/*": ["src/components/*"],
			"@pages/*": ["src/pages/*"],
			"@redux/*": ["src/redux/*"],
			"@typings/*": ["src/typings/*"],
			"@utils/*": ["src/utils/*"]
		},
		"strict": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noEmit": true,
		"skipLibCheck": true
	}
}
